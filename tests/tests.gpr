with "../functional.gpr";

project Tests is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";

   for Main use
     ("test_runner.adb",
      "test_result.adb",
      "test_option.adb",
      "test_either.adb",
      "test_try.adb",
      "test_try_option.adb");

   package Compiler renames Functional.Compiler;
   package Binder renames Functional.Binder;

   package Builder is
      for Default_Switches ("Ada") use ("-j0", "-s");
      for Executable ("test_runner.adb") use "test_runner";
      for Executable ("test_result.adb") use "test_result";
      for Executable ("test_option.adb") use "test_option";
      for Executable ("test_either.adb") use "test_either";
      for Executable ("test_try.adb") use "test_try";
      for Executable ("test_try_option.adb") use "test_try_option";
   end Builder;

end Tests;
